<h2><%= @recipe.title %></h2>
<div class="recipe_body">
  <table>
  <caption>Ingredients</caption>
  <thead>
      <tr>
        <th>quantity</th>
        <th>name</th>
      </tr>
  </thead>
  <tbody>
    <% @recipe.portions.each do |portion| %>
      <tr>
        <td><%= portion.quantity %> <%= portion.unit %> of </td>
        <td><%= portion.ingredient.name %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  <p class="recipe_content">
    <%= @recipe.content %>
  </p>
</div>
